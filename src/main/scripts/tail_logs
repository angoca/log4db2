# Performs the equivalent of "tail -f" with the LOGS table. It could receive
# the following positional arguments:
# 1) Quantity of iterations.
# 2) Seconds between iteration.
# If no arguments are given, it will do unlimited iterations each 1 seconds.
#
# Version: 2022-06-09 v1
# Author: Andres Gomez Casanova (AngocA)
# Made in COLOMBIA.

VAL=${1:-}
INC=1
SECS=${2:-}

# Security options.
set -euf

if [ -z "${VAL:-}" ] ; then
 INC=0
 VAL=2
fi

if [ -z "${SECS:-}" ] ; then
 SECS=1
fi

db2 set serveroutput on
set +e
db2 connect > /dev/null
RET=${?}
set -e
if [ ${RET} -eq 0 ] ; then
 I=0
 while [ ${I} != ${VAL} ] ; do
  set +e
  db2 -x +w "call logadmin.next_logs()" | grep -v '^  Result set 1$' | grep -v '^  --------------$' | grep -v '^  Return Status = 0$' | grep -v '^$'
  set -e
  (( TMP = VAL - 1 ))
  if [ ${I} -ne ${TMP} ] ; then
   # echo "Waiting ${SECS} seconds..."
   sleep ${SECS}
  fi
  (( I = I + INC ))
 done
else
 echo "Please connect to a database before execute this script."
 echo "Remember that to call the script the command is '. ./tail_logs'"
fi
set +euf

