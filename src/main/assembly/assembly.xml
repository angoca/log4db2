<assembly
 xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
 <id>release</id>
 <formats>
  <format>zip</format>
  <format>tar.gz</format>
  <format>dir</format>
 </formats>
 <includeBaseDirectory>true</includeBaseDirectory>

 <fileSets>
  <!-- License and Readme files -->
  <fileSet>
   <directory>.</directory>
   <includes>
    <include>README.txt</include>
    <include>COPYING.txt</include>
   </includes>
   <fileMode>0444</fileMode>
   <outputDirectory>/</outputDirectory>
  </fileSet>
  <!-- SQL PL code -->
  <fileSet>
   <directory>src/main/sql-pl</directory>
   <includes>
    <include>**/*</include>
   </includes>
   <fileMode>0666</fileMode>
   <outputDirectory>sql-pl</outputDirectory>
  </fileSet>
  <!-- Scripts for Linux / UNIX -->
  <fileSet>
   <directory>src/main/scripts</directory>
   <includes>
    <include>**/init</include>
    <include>**/install</include>
    <include>**/reinstall</include>
    <include>**/uninit</include>
    <include>**/uninstall</include>
    <include>**/tail_logs</include>
   </includes>
   <fileMode>0777</fileMode>
   <lineEnding>lf</lineEnding>
   <outputDirectory>/</outputDirectory>
  </fileSet>
  <!-- Scripts for Windows -->
  <fileSet>
   <directory>src/main/scripts</directory>
   <includes>
    <include>**/*.bat</include>
    <include>**/*.ps1</include>
   </includes>
   <fileMode>0666</fileMode>
   <lineEnding>crlf</lineEnding>
   <outputDirectory>/</outputDirectory>
  </fileSet>
  <!-- XML files -->
  <fileSet>
   <directory>src/main/xml</directory>
   <includes>
    <include>**/*</include>
   </includes>
   <fileMode>0666</fileMode>
   <outputDirectory>xml</outputDirectory>
  </fileSet>
  <!-- Documentation directory (with its license)-->
  <fileSet>
   <directory>doc</directory>
   <includes>
    <include>**/COPYING.txt</include>
    <include>**/ER-diagram.png</include>
    <include>**/ErrorCodes.txt</include>
    <!-- All extra appenders -->
    <include>**/Appender_DB2LOGGER.txt</include>
   </includes>
   <outputDirectory>doc</outputDirectory>
  </fileSet>
  <!-- Examples -->
  <fileSet>
   <directory>src/examples/sql-pl</directory>
   <includes>
    <include>**/*</include>
   </includes>
   <outputDirectory>examples</outputDirectory>
  </fileSet>
  <fileSet>
   <directory>src/examples/scripts</directory>
   <includes>
    <include>**/*</include>
   </includes>
   <outputDirectory>examples</outputDirectory>
  </fileSet>
 </fileSets>
</assembly>